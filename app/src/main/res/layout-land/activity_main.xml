<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context="com.example.android.greatdaychallenge.MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/background_superday_land"
        android:padding="8dp">

        <LinearLayout
            android:id="@+id/mainSection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/playerA"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingRight="4dp">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/playerNameA"
                        style="@style/edt"
                        android:hint="@string/hintEdt" />

                    <Button
                        android:id="@+id/deleteA"
                        style="@style/btnErase"
                        android:background="@drawable/delete" />
                </FrameLayout>

                <TextView
                    android:id="@+id/scoreA"
                    style="@style/finalScore"
                    android:textColor="@color/purple" />

                <TextView
                    style="@style/titleStyle"
                    android:text="@string/titleSport"
                    android:textColor="@color/grey" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center">

                    <Button
                        android:id="@+id/addThirtyMinA"
                        style="@style/btnMain"
                        android:drawableLeft="@drawable/dumbbell"
                        android:onClick="add30MinutesA"
                        android:text="30" />

                    <Button
                        android:id="@+id/addSixtyMinA"
                        style="@style/btnMain"
                        android:drawableLeft="@drawable/dumbbell"
                        android:onClick="add60MinutesA"
                        android:text="60" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center">

                    <Button
                        android:id="@+id/AddHourAndHalfA"
                        style="@style/btnMain"
                        android:drawableLeft="@drawable/dumbbell"
                        android:onClick="add90MinutesA"
                        android:text="90" />

                    <Button
                        android:id="@+id/addTwoHoursA"
                        style="@style/btnMain"
                        android:drawableLeft="@drawable/dumbbell"
                        android:onClick="add120MinutesA"
                        android:text="120" />
                </LinearLayout>

                <TextView
                    style="@style/titleStyle"
                    android:text="@string/titleHealthy"
                    android:textColor="@color/grey" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/add30HealthyA"
                        style="@style/btnMain"
                        android:drawableLeft="@drawable/healthy"
                        android:onClick="add30HealthyA"
                        android:text="+30" />

                    <Button
                        android:id="@+id/lose30HealthyA"
                        style="@style/btnMain"
                        android:drawableLeft="@drawable/junk"
                        android:onClick="lose30HealthyA"
                        android:text="-30" />
                </LinearLayout>

                <TextView
                    style="@style/titleStyle"
                    android:text="@string/titleBonus"
                    android:textColor="@color/grey" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/addThirtySkillsA"
                        style="@style/btnMain"
                        android:drawableLeft="@drawable/skills"
                        android:onClick="add30SkillsA"
                        android:text="+30" />

                    <Button
                        android:id="@+id/addThirtyGoodA"
                        style="@style/btnMain"
                        android:drawableLeft="@drawable/goodnes"
                        android:onClick="add30GoodA"
                        android:text="+30" />
                </LinearLayout>

                <TextView
                    style="@style/sumTitleStyle"
                    android:text="@string/titleSummary"
                    android:textColor="@color/grey" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:orientation="horizontal"
                    android:paddingLeft="4dp">

                    <TextView
                        style="@style/sumTextStyle"
                        android:text="@string/noActivities"
                        android:textColor="@color/grey" />

                    <TextView
                        android:id="@+id/sumNoActivityA"
                        style="@style/sumNuStyle"
                        android:textColor="#800080" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:orientation="horizontal"
                    android:paddingLeft="4dp">

                    <TextView
                        style="@style/sumTextStyle"
                        android:text="@string/noActiveMinutes"
                        android:textColor="@color/grey" />

                    <TextView
                        android:id="@+id/sumActiveMinutesA"
                        style="@style/sumNuStyle"
                        android:layout_height="match_parent"
                        android:textColor="#800080" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:orientation="horizontal"
                    android:paddingLeft="4dp">


                    <TextView
                        style="@style/sumTextStyle"
                        android:text="@string/noHealthyfood"
                        android:textColor="@color/grey" />

                    <TextView
                        android:id="@+id/sumHealthyFoodA"
                        style="@style/sumNuStyle"
                        android:textColor="#800080" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:orientation="horizontal"
                    android:paddingLeft="4dp">

                    <TextView
                        style="@style/sumTextStyle"
                        android:text="@string/noBonus"
                        android:textColor="@color/grey" />

                    <TextView
                        android:id="@+id/sumBonusA"
                        style="@style/sumNuStyle"
                        android:textColor="#800080" />

                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_marginTop="16dp"
                android:background="@android:color/darker_gray" />

            <LinearLayout
                android:id="@+id/playerB"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingLeft="4dp">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/playerNameB"
                        style="@style/edt"
                        android:hint="@string/hintEdt" />

                    <Button
                        android:id="@+id/deleteB"
                        style="@style/btnErase"
                        android:background="@drawable/delete" />
                </FrameLayout>

                <TextView
                    android:id="@+id/scoreB"
                    style="@style/finalScore"
                    android:textColor="@color/purple" />

                <TextView
                    style="@style/titleStyle"
                    android:text="@string/titleSport"
                    android:textColor="@color/grey" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center">

                    <Button
                        android:id="@+id/addThirtyMinB"
                        style="@style/btnMain"
                        android:drawableLeft="@drawable/dumbbell"
                        android:onClick="add30MinutesB"
                        android:text="30" />

                    <Button
                        android:id="@+id/addSixtyMinB"
                        style="@style/btnMain"
                        android:drawableLeft="@drawable/dumbbell"
                        android:onClick="add60MinutesB"
                        android:text="60" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center">

                    <Button
                        android:id="@+id/AddHourAndHalfB"
                        style="@style/btnMain"
                        android:drawableLeft="@drawable/dumbbell"
                        android:onClick="add90MinutesB"
                        android:text="90" />

                    <Button
                        android:id="@+id/addTwoHoursB"
                        style="@style/btnMain"
                        android:drawableLeft="@drawable/dumbbell"
                        android:onClick="add120MinutesB"
                        android:text="120" />
                </LinearLayout>

                <TextView
                    style="@style/titleStyle"
                    android:text="@string/titleHealthy"
                    android:textColor="@color/grey" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/add30HealthyB"
                        style="@style/btnMain"
                        android:drawableLeft="@drawable/healthy"
                        android:onClick="add30HealthyB"
                        android:text="+30" />

                    <Button
                        android:id="@+id/lose30HealthyB"
                        style="@style/btnMain"
                        android:drawableLeft="@drawable/junk"
                        android:onClick="lose30HealthyB"
                        android:text="-30" />
                </LinearLayout>

                <TextView
                    style="@style/titleStyle"
                    android:text="@string/titleBonus"
                    android:textColor="@color/grey" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/addThirtySkillsB"
                        style="@style/btnMain"
                        android:drawableLeft="@drawable/skills"
                        android:onClick="add30SkillsB"
                        android:text="+30" />

                    <Button
                        android:id="@+id/addThirtyGoodB"
                        style="@style/btnMain"
                        android:drawableLeft="@drawable/goodnes"
                        android:onClick="add30GoodB"
                        android:text="+30" />
                </LinearLayout>

                <TextView
                    style="@style/sumTitleStyle"
                    android:text="@string/titleSummary"
                    android:textColor="@color/grey" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:orientation="horizontal"
                    android:paddingLeft="4dp">

                    <TextView
                        style="@style/sumTextStyle"
                        android:text="@string/noActivities"
                        android:textColor="@color/grey" />

                    <TextView
                        android:id="@+id/sumNoActivityB"
                        style="@style/sumNuStyle"
                        android:textColor="#800080" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:orientation="horizontal"
                    android:paddingLeft="4dp">

                    <TextView
                        style="@style/sumTextStyle"
                        android:text="@string/noActiveMinutes"
                        android:textColor="@color/grey" />

                    <TextView
                        android:id="@+id/sumActiveMinutesB"
                        style="@style/sumNuStyle"
                        android:textColor="#800080" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:orientation="horizontal"
                    android:paddingLeft="4dp">


                    <TextView
                        style="@style/sumTextStyle"
                        android:text="@string/noHealthyfood"
                        android:textColor="@color/grey" />

                    <TextView
                        android:id="@+id/sumHealthyFoodB"
                        style="@style/sumNuStyle"
                        android:textColor="#800080" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:orientation="horizontal"
                    android:paddingLeft="4dp">

                    <TextView
                        style="@style/sumTextStyle"
                        android:text="@string/noBonus"
                        android:textColor="@color/grey" />

                    <TextView
                        android:id="@+id/sumBonusB"
                        style="@style/sumNuStyle"
                        android:textColor="#800080" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/resetSection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_below="@id/mainSection"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/whoWinA"
                style="@style/whoWinStyle"
                android:textColor="#800080" />

            <Button
                android:id="@+id/newDay"
                style="@style/btnMain"
                android:layout_gravity="center"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:background="#800080"
                android:onClick="startNewDay"
                android:text="@string/resetBtn"
                android:textColor="#ffffff" />

            <TextView
                android:id="@+id/whoWinB"
                style="@style/whoWinStyle"
                android:textColor="#800080" />
        </LinearLayout>
    </RelativeLayout>
</ScrollView>