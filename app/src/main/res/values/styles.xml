<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <!-- Activity bar color -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <!-- Status bar color -->
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <!-- Button color -->
        <item name="colorAccent">@color/colorAccent</item>
        <!-- Edit text color -->
        <item name="editTextColor">@color/textGreen</item>
        <!-- Button text style -->
        <item name="android:buttonStyle">@style/btnMain</item>
    </style>

    <!-- Button main -->
    <style name="btnMain" parent="Widget.AppCompat.Button.Colored">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <!-- Erase button style -->
    <style name="btnErase" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:layout_width">15dp</item>
        <item name="android:layout_height">15dp</item>
        <item name="android:layout_gravity">end|center_vertical</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:layout_marginRight">5dp</item>
    </style>

    <!-- EditText style -->
    <style name="edt" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:cursorVisible">true</item>
        <item name="android:inputType">text</item>
        <item name="android:maxLines">10</item>
        <item name="android:textSize">@dimen/edtSize</item>
    </style>

    <!-- Final score style -->
    <style name="finalScore" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/finalScoreSize</item>
        <item name="android:textStyle">bold</item>
        <item name="android:text">@string/startScore</item>
    </style>

    <!-- Title style -->
    <style name="titleStyle" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- SUM title style -->
    <style name="sumTitleStyle" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">left</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingLeft">4dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <!-- SUM title style -->
    <style name="sumTextStyle" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">4</item>
    </style>

    <!-- SUM numbers style -->
    <style name="sumNuStyle" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:text">@string/startScore</item>
    </style>

    <!-- Who WIN style -->
    <style name="whoWinStyle" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">2</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">@dimen/whoWinSize</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>
